{
  "manifest_version": 3,
  "name": "ChatGPT Delta URL Extractor",
  "version": "1.0",
  "description": "Extracts URLs from ChatGPT delta responses and displays them in a popup.",
  "permissions": ["activeTab", "scripting", "storage"],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://chat.openai.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}

